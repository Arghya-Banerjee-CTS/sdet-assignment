<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.example</groupId>
  <artifactId>profiles-db</artifactId>
  <version>1.0.0</version>
  <properties>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
  </properties>
  <profiles>
    <profile>
      <id>dev</id>
      <properties>
        <db.url>jdbc:mysql://localhost:3306/dev</db.url>
        <db.user>dev_user</db.user>
        <db.pass>dev_pass</db.pass>
      </properties>
    </profile>
    <profile>
      <id>qa</id>
      <properties>
        <db.url>jdbc:mysql://localhost:3306/qa</db.url>
        <db.user>qa_user</db.user>
        <db.pass>qa_pass</db.pass>
      </properties>
    </profile>
    <profile>
      <id>prod</id>
      <properties>
        <db.url>jdbc:mysql://localhost:3306/prod</db.url>
        <db.user>prod_user</db.user>
        <db.pass>prod_pass</db.pass>
      </properties>
    </profile>
  </profiles>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
  </build>
</project>
